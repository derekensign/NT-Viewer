{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "ignorePatterns": ["src/serviceWorker.js"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "import/prefer-default-export": "warn",
        "no-unused-vars": "warn",
        "comma-dangle": "warn",
        "react/button-has-type": "warn",
        "no-param-reassign": [2, { "props": false }],
        "no-shadow": "warn"
    }
}
